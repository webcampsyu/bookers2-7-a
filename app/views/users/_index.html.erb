<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <% if current_user != user %>
        <!-- !は論理演算子であり、not演算子と呼ばれる
        「!=」と記述すると、比較演算子の「==」の反対の意味である
        値同士が等しくない場合にtrueを返す-->
        <% if current_user.following?(user) %>
        <td><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class:"btn-sm btn-denger" %></td>
        <% else %>
        <td><%= link_to "フォローする", user_relationships_path(user.id), method: :POST, class:"btn-sm btn-success" %></td>
        <% end %>
        <% end %>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
