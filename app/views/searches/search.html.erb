<table>
<!--検索対象モデルがUserの時-->
<% if @range == "User" %>
<h2>Users search for "<%= @word %>"</h2>
 <thead>
   <tr>
     <th>image</th>
     <th>name</th>
     <th colspan="3"></th>
   </tr>
 </thead>
 <tbody>
 <% @users.each do |user| %>
  <tr>
    <td><%= image_tag user.get_profile_image, size:'50, 50' %></td>
    <td><%= user.name %></td>
  </tr>
 <% end %>
 </tbody>
<% else %>
<h2>Books search for "<%= @word %>"</h2>
<!--検索対象モデルがUserではないとき(=検索対象モデルがBookの時-->
 <thead>
   <tr>
     <th></th>
     <th>Title</th>
     <th>Body</th>
   </tr>
 </thead>
 <tbody>
 <% @books.each do |book| %>
   <tr>
     <td></td>
     <td><%= image_tag user.get_profile_image, size:'50, 50' %></td>
     <td><%= link_to book.title, book_path(book.id) %></td>
     <td><%= book.body %></td>
   </tr>
 <% end %>
 </tbody>
<% end %>
</table>